<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--edit texts-->
    <style name="authTextInputEditText">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:background">@drawable/bg_auth_edit_text_background</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
    </style>

    <style name="authTextInputEditTextPhone" parent="authTextInputEditText">
        <item name="android:drawableLeft">@drawable/ic_phone_number</item>
        <item name="android:drawableStart">@drawable/ic_phone_number</item>
    </style>

    <style name="authTextInputEditTextUser" parent="authTextInputEditText">
        <item name="android:drawableLeft">@drawable/ic_user</item>
        <item name="android:drawableStart">@drawable/ic_user</item>
    </style>

    <style name="authTextInputEditTextEmail" parent="authTextInputEditText">
        <item name="android:drawableLeft">@drawable/ic_email</item>
        <item name="android:drawableStart">@drawable/ic_email</item>
    </style>

    <style name="authTextInputEditTextPin" parent="authTextInputEditText">
        <item name="android:drawableLeft">@drawable/ic_pin</item>
        <item name="android:drawableStart">@drawable/ic_pin</item>
    </style>

    <style name="authTextInputEditTextOrder" parent="authTextInputEditText" />

    <style name="authTextInputEditTextOrderProduct" parent="authTextInputEditText" />

    <style name="rowHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="rowBody">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="rowLabelBody">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
